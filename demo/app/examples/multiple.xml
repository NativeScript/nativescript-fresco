 <lv:RadListView xmlns:lv="nativescript-ui-listview" xmlns:img="nativescript-image" items="{{ dataItems }}" id="listView">
    <lv:RadListView.itemTemplate>
        <GridLayout rows="*, auto">
                <img:Img verticalAlignment="top"
                                    aspectRatio="{{ aspectRatio, aspectRatio }}"
                                    backgroundUri="res://ns_logo"
                                    src="{{ imageUri, imageUri }}"/>
                <StackLayout backgroundColor="#c9c9c9" verticalAlignment="top" row="1">
                    <Label height="22" text="{{ id, id }}" verticalAlignment="center" horizontalAlignment="center"/>
                </StackLayout>
        </GridLayout>
    </lv:RadListView.itemTemplate>
</lv:RadListView>